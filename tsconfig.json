{
  "compilerOptions": {
    "baseUrl":"./packages",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esNext", "dom"],
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@bank-app/core": ["core/src" ]
    }
  }
}
